    <div class="project" id="portfolio">
        <div class="project-content section-content flex">
            <h2 class="like-h1">Ostatnie projekty</h2>
            <div class="under-line-container">
                <div class="under-line"></div>
            </div>
            {% for item in page.header.projects %}
            {% if loop.index % 2 == 1 %}
            <div class="project-container project-container-{{loop.index}}">
                <div class="project-image col-sm-7">
                    <img src="{{item.image}}" alt="projekt zdjecie">
                </div>
                <div class="project-section col-xs-12 col-sm-5">
                    <h4>{{item.title}}</h4>
                    <p>{{item.description}}</p>
                    <div class="languages">
                        <h6>Programming languages used:</h6>
                        <p>{{item.languages}}</p>
                    </div>
                    <div class="languages">
                        <h6>Frameworks used:</h6>
                        <p>{{item.frameworks}}</p>
                    </div>
                    <div class="buttons">
                       {% if grav.language.getActive == 'en' %}
                        <div class="button button-black"><a target="_blank" href="{{item.link}}">See online</a></div>
                        <div class="button button-color button-link"><a href="/{{grav.language.getActive}}/portfolio">More projects</a></div>
                        {% else %}
                        <div class="button button-black"><a target="_blank" href="{{item.link}}">Zobacz online</a></div>
                        <div class="button button-color button-link"><a href="/{{grav.language.getActive}}/portfolio">Więcej projektów</a></div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% else %}
            <div class="project-container project-container-{{loop.index}}">
                <div class="project-section col-xs-12 col-sm-5">
                    <h4>{{item.title}}</h4>
                    <p>{{item.description}}</p>
                    <div class="languages">
                        <h6>Programming languages used:</h6>
                        <p>{{item.languages}}</p>
                    </div>
                    <div class="languages">
                        <h6>Frameworks used:</h6>
                        <p>{{item.frameworks}}</p>
                    </div>
                    <div class="buttons">
                       {% if grav.language.getActive == 'en' %}
                        <div class="button button-black"><a target="_blank" href="{{item.link}}">See online</a></div>
                        <div class="button button-color button-link"><a href="/{{grav.language.getActive}}/portfolio">More projects</a></div>
                        {% else %}
                        <div class="button button-black"><a target="_blank" href="{{item.link}}">Zobacz online</a></div>
                        <div class="button button-color button-link"><a href="/{{grav.language.getActive}}/portfolio">Więcej projektów</a></div>
                        {% endif %}
                    </div>
                </div>
                <div class="project-image col-sm-7">
                    <img src="{{item.image}}" alt="projekt zdjecie">
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>